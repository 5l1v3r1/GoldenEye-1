<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <Version>1.0.0</Version>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PackageId>GoldenEye.WebApi.SimpleDDD</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Oskar Dudycz</Authors>
    <Company>Oskar Dudycz</Company>
    <Product>Oskar Dudycz</Product>
    <Copyright>Oskar Dudycz</Copyright>
    <Description>GoldenEye.DDD is a library that helps to write code in Domain Driven Design and CQRS. It is written in .NET Core. It provides set of base and bootstrap classes that helps you to reduce boilerplate code and help you focus on writing business code.</Description>
    <PackageLicenseUrl>https://github.com/oskardudycz/GoldenEye/blob/master/LICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>http://oskardudycz.github.io/GoldenEye/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/oskardudycz/GoldenEye</RepositoryUrl>
    <RootNamespace>GoldenEye.WebApi.SimpleDDD</RootNamespace>
    <AssemblyName>GoldenEye.WebApi.SimpleDDD</AssemblyName>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageIconUrl>https://raw.githubusercontent.com/oskardudycz/GoldenEye/master/assets/GoldenEyeLogo.png</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include=".template.config\template.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="6.2.2" />
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="3.2.0" />
    <PackageReference Include="GoldenEye.Backend.Core" Version="5.1.0" />
    <PackageReference Include="GoldenEye.Backend.Core.DDD" Version="6.0.1" />
    <PackageReference Include="GoldenEye.Backend.Core.Marten" Version="5.1.0" />
    <PackageReference Include="GoldenEye.Backend.Core.WebApi" Version="5.0.1" />
    <PackageReference Include="GoldenEye.Shared.Core" Version="4.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.7" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>