<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Version>7.1.0</Version>
        <PackageId>GoldenEye.Backend.Identity</PackageId>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Authors>Oskar Dudycz</Authors>
        <Company>Oskar Dudycz</Company>
        <Product>Oskar Dudycz</Product>
        <Copyright>Oskar Dudycz</Copyright>
        <Description>GoldenEye is a Full Stack framework written in .NET Core. The main goal of GoldenEye is to speed up your development process. It gathers most widely used frameworks in .NET world and pack them into a simple bootstrap Nuget packages. It also provide set of base classes, helpers, extensions that will help you with your daily work.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>http://oskardudycz.github.io/GoldenEye/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/oskardudycz/GoldenEye</RepositoryUrl>
        <AssemblyName>GoldenEye.Backend.Identity</AssemblyName>
        <RootNamespace>GoldenEye.Backend.Identity</RootNamespace>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <PackageIcon>GoldenEyeLogo.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="IdentityServer4" Version="3.1.3" />
        <PackageReference Include="IdentityServer4.AspNetIdentity" Version="3.1.3" />
        <PackageReference Include="IdentityServer4.EntityFramework" Version="3.1.3" />
        <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="3.1.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Core\Backend.Core.EntityFramework\Backend.Core.EntityFramework.csproj" />
        <ProjectReference Include="..\..\Core\Backend.Core\Backend.Core.csproj" />
        <ProjectReference Include="..\..\Core\Backend.Core.WebApi\Backend.Core.WebApi.csproj" />
        <ProjectReference Include="..\..\Core\Shared.Core\Shared.Core.csproj" />
        <ProjectReference Include="..\Shared.Security\Shared.Security.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../../../assets/GoldenEyeLogo.png" Visible="false" Pack="true" PackagePath="" />
    </ItemGroup>
</Project>
